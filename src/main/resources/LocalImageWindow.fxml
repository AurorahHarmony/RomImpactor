<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="wizardPane" prefWidth="400" prefHeight="300" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manager.controllers.LocalImageWindow">
    <children>
        <!-- Step 1 -->
        <AnchorPane fx:id="step1" visible="true">
            <!-- Define the UI components for Step 1 -->
            <Button fx:id="imageSelectButton" onMouseClicked="#chooseFile" text="Select Image" />
            <Label fx:id="selectedFileLabel"/>
        </AnchorPane>

        <!-- Step 2 -->
        <AnchorPane fx:id="step2" visible="false" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        </AnchorPane>

        <!-- Step 3 -->
        <AnchorPane fx:id="step3" visible="false">
            <!-- Define the UI components for Step 3 -->
            <Button text="Step 3" />
        </AnchorPane>

        <!-- Back Button -->
        <Button fx:id="backButton" text="Back" layoutX="50" layoutY="250" onAction="#goBack" disable="true" />

        <!-- Next Button -->
        <Button fx:id="nextButton" text="Next" layoutX="100" layoutY="250" onAction="#goNext" />
    </children>
</AnchorPane>
