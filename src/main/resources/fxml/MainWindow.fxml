                     <image>
                        <Image url="@images/noselection.png" />
                     </image>
                  </ImageView>
                  <Pane fx:id="romInfo" id="RomInfo" layoutX="10.0" layoutY="372.0" prefHeight="103.0" prefWidth="326.0">
                      <AnchorPane>
                        <VBox>
                          <Label styleClass="romInfoTitle" fx:id="romInfoTitle" />
                          <Label styleClass="romInfoSubTitle" fx:id="romInfoSubTitle" />
                        </VBox>
                          
                      </AnchorPane>
                  </Pane>
                  <Button onMouseClicked="#handlelocalImageButton" fx:id="localImageButton" layoutX="5.0" layoutY="488.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="164.0">  
                    <graphic>
                     <FontIcon iconLiteral="fas-plus" iconSize="12" iconColor="e3e4fc"/>
                    </graphic>
                    <text> LOCAL IMAGE</text>
                  </Button>
                  <Button fx:id="onlineSearchButton" layoutX="176.0" layoutY="488.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="164.0" styleClass="secondaryButton">
                    <graphic>
                     <FontIcon iconLiteral="fas-search" iconSize="12" iconColor="e3e4fc"/>
                    </graphic>
                    <text> SEARCH ONLINE</text>
                  </Button>
          </children>
        </AnchorPane>
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label fx:id="leftStatus" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="rightStatus" font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
