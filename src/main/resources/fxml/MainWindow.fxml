      <items>
        <AnchorPane fx:id="systemPane" minWidth="240.0" styleClass="root">
          <children>
            <Label alignment="CENTER" layoutX="11.0" layoutY="7.0" minWidth="60.0" prefWidth="-1.0" style="&#10;" styleClass="title" text="System Select" textAlignment="CENTER" wrapText="false">
              <font>
                <Font size="18.0" fx:id="x1" />
              </font>
              <textFill>
                <Color red="0.624" green="0.624" blue="0.624" fx:id="x2" />
              </textFill>
            </Label>
                  <ListView fx:id="systemListView" layoutX="11.0" layoutY="40.0" prefHeight="434.0" prefWidth="220.0" onMouseClicked="#handleSystemListViewClick">
                      <cellFactory>
                          
                      </cellFactory>
                  </ListView>
                  <Label fx:id="directoryLabel" layoutX="14.0" layoutY="520.0" />
                  <Label layoutX="14.0" layoutY="491.0" text="Current Directory" />
                  <Separator layoutX="11.0" layoutY="507.0" opacity="0.1" prefWidth="200.0" />
                  <Button fx:id="changeDirButton" onAction="#handleChangeDirButton" layoutX="137.0" layoutY="516.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="67.0" styleClass="smallbutton" text="CHANGE" />
          </children>
        </AnchorPane>
      <AnchorPane id="Content" fx:id="romPane" minHeight="-1.0" minWidth="315.0" prefHeight="545.0" prefWidth="315.0" styleClass="root">
        <children>
          <Label alignment="CENTER" font="$x1" layoutX="10.0" layoutY="7.0" style="&#10;" styleClass="title" text="Roms" textAlignment="CENTER" textFill="$x2" wrapText="false" />
          <ListView fx:id="romListView" layoutX="11.0" layoutY="40.0" prefHeight="434.0" prefWidth="300.0" onMouseClicked="#handleRomListViewClick" onKeyPressed="#handleRomListViewKeyPressed">
            <cellFactory>
                
            </cellFactory>
          </ListView>
          <Button fx:id="addRomButton" layoutX="10.0" layoutY="489.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="116.0">
            <graphic>
              <FontIcon iconLiteral="far-plus-square" iconSize="12" iconColor="e3e4fc"/>
            </graphic>
            <text> ADD ROM</text>
          </Button>
        </children>
      </AnchorPane>
        <AnchorPane fx:id="infoPane" minWidth="316.0" prefHeight="555.0" prefWidth="353.0" styleClass="root">
          <children>
            <Label alignment="CENTER" font="$x1" layoutX="15.0" layoutY="6.0" style="&#10;" styleClass="title" text="Details" textAlignment="CENTER" textFill="$x2" wrapText="false" />
