<VBox fx:controller="manager.controllers.MainWindowController" minHeight="400.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" stylesheets="@/styles/mainWindow.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <children>
      <HBox id="topBar" fx:id="topBar" prefHeight="33.0" prefWidth="900.0" VBox.vgrow="ALWAYS">
        <children>
          <AnchorPane id="menuContainer" minHeight="0.0" minWidth="0.0" prefHeight="30.0" prefWidth="115.0" SplitPane.resizableWithParent="false">
               <children>
                <MenuBar layoutY="8.0" prefHeight="25.0" prefWidth="815.0">
                  <menus>
                    <Menu fx:id="topMenu" mnemonicParsing="false" text="Menu">
                      <items>
                              <MenuItem fx:id="optionsMenuItem" onAction="#handleOptionsMenuItem" mnemonicParsing="false" text="Options" />
                        <MenuItem mnemonicParsing="false" text="About" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="closeMenuItem" onAction="#handleCloseMenuItem" mnemonicParsing="false" text="Close" />
                      </items>
                    </Menu>
                  </menus>
                </MenuBar>
               </children>
            </AnchorPane>
          <AnchorPane id="WindowActionButtons" minHeight="0.0" minWidth="0.0" prefHeight="12.0" prefWidth="802.0">
               <children>
                  <ButtonBar layoutX="360.0" layoutY="-6.0" prefHeight="40.0" prefWidth="200.0" />
                <Button styleClass="minimize-button" fx:id="minimizeButton" onAction="#handleMinimizeButton" layoutX="738.0" layoutY="11.0" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
                  <graphic>
                    <FontIcon  iconLiteral="fas-window-minimize" iconSize="10" iconColor="#dee6f1c7"/>
                  </graphic>
                </Button>
                <Button styleClass="close-button" fx:id="closeButton" onAction="#handleCloseButton" layoutX="768.0" layoutY="11.0" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
                  <graphic>
                    <FontIcon iconLiteral="fas-window-close" iconSize="10" iconColor="#dee6f1c7"/>
                  </graphic>
                </Button>
               </children>
            </AnchorPane>
        </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="-8.0" />
         </VBox.margin>
      </HBox>
