<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="wizardPane" prefHeight="480.0" prefWidth="700.0" styleClass="defaultContainer" stylesheets="@/styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manager.controllers.actionWizard.RomActionWizard">
    <children>
        
        <!-- Select Operating Mode -->
        <AnchorPane fx:id="selectMode" styleClass="defaultContainer" visible="true">
        <Label layoutX="23.0" layoutY="14.0" text="Select Mode" />
            <Pane layoutX="23.0" layoutY="67.0" prefHeight="141.0" prefWidth="309.0" styleClass="borderBox">
                <children>
                    <Label layoutX="14.0" layoutY="14.0" text="Cover Art Actions" />
                    <RadioButton fx:id="localImageSelect" layoutX="26.0" layoutY="60.0" mnemonicParsing="false" text="Local Image Select"/>
                    <RadioButton fx:id="onlineImageSearch" layoutX="26.0" layoutY="93.0" mnemonicParsing="false" text="Online Image Search"  />
                </children>
            </Pane>
            <Pane layoutX="23.0" layoutY="224.0" prefHeight="141.0" prefWidth="309.0" styleClass="borderBox">
                <children>
                    <Label layoutX="14.0" layoutY="14.0" text="Other Actions" />
                    <RadioButton fx:id="localRomPatcher" layoutX="26.0" layoutY="60.0" mnemonicParsing="false" text="Local Rom Patcher"  />
                    <RadioButton fx:id="onlineRomPatcher" layoutX="26.0" layoutY="93.0" mnemonicParsing="false" text="Online Rom Patcher"  />
                </children>
            </Pane>
        </AnchorPane>

        <!-- Local File Select -->
        <AnchorPane fx:id="localFileSelect" visible="false">
          
        </AnchorPane>

        <!-- ImageCropper -->
        <AnchorPane fx:id="imageCropper" minHeight="${wizardPane.height}" minWidth="${wizardPane.width}" styleClass="defaultContainer" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        </AnchorPane>

        <!-- Step 3 -->
        <AnchorPane fx:id="finalPreview" styleClass="defaultContainer" visible="false">
            <!-- Define the UI components for Step 3 -->
            <Button onMouseClicked="#saveImage" text="Step 3" />
            <ImageView fx:id="croppedImage" layoutY="100" minHeight="${wizardPane.height}" minWidth="${wizardPane.width}" preserveRatio="true" styleClass="imageView" />
        </AnchorPane>

        <AnchorPane fx:id="WindowActionButtons" id="WindowActionButtons" layoutX="0" layoutY="0" minHeight="32.0" minWidth="0.0" prefHeight="32.0" prefWidth="${wizardPane.width}">
            <children>
            <Button styleClass="minimize-button" fx:id="minimizeButton" onAction="#handleMinimizeButton" AnchorPane.rightAnchor="44.0" layoutX="738.0" layoutY="11.0" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
                <graphic>
                <FontIcon  iconLiteral="fas-window-minimize" iconSize="10" iconColor="#dee6f1c7"/>
                </graphic>
            </Button>
            <Button styleClass="close-button" fx:id="closeButton" onAction="#handleCloseButton" AnchorPane.rightAnchor="14.0" layoutX="768.0" layoutY="11.0" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
                <graphic>
                <FontIcon iconLiteral="fas-window-close" iconSize="10" iconColor="#dee6f1c7"/>
                </graphic>
            </Button>
            </children>
        </AnchorPane> 

        <!-- Back Button -->
        <Button fx:id="backButton" disable="true" layoutX="18.0" layoutY="262.0" onAction="#goBack" prefHeight="23.0" prefWidth="80.0" text="Back" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="18.0" />

        <!-- Next Button -->
        <Button fx:id="nextButton" layoutX="345.0" layoutY="262.0" onAction="#goNext" prefHeight="23.0" prefWidth="80.0" text="Next" AnchorPane.bottomAnchor="6.0" AnchorPane.rightAnchor="14.0" />

        <!-- Save Button -->
        <Button fx:id="saveButton" layoutX="345.0" layoutY="262.0" onAction="#saveImage" prefHeight="23.0" prefWidth="80.0" text="Save" AnchorPane.bottomAnchor="6.0" AnchorPane.rightAnchor="14.0" />
               
           
    </children>
</AnchorPane>
